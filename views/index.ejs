<script>
	var infoBtn = document.querySelector(".info");
	var moreBtn = document.querySelector(".more-icon");
	var infoMenu = document.querySelector(".info-menu");

	infoBtn.addEventListener("click", function(){
		infoMenu.classList.remove("info-menu-off");
		infoMenu.classList.add("info-menu-on");

		if(window.matchMedia("(orientation: landscape)").matches){
			animateOn();
		} else {
			animateOnPortrait();
		}
	})

	moreBtn.addEventListener("click", function(){
		if(window.matchMedia("(orientation: landscape)").matches){
			animateOff();
		} else {
			animateOffPortrait();
		}
	})

	function animateOn(){
		var width = 0;
		var intervalOn = setInterval(frame, 5);

		infoMenu.style.height = "100vh";
		function frame(){
			if (width >= 20){
				clearInterval(intervalOn);
			} else {
				width++;
				infoMenu.style.width = width + 'vw';
			}
		}
	}

	function animateOnPortrait(){
		console.log("on");
		var height = 0;
		var intervalOn = setInterval(frame, 5);

		infoMenu.style.width = "94%";
		function frame(){
			if (height >= 65){
				clearInterval(intervalOn);
			} else {
				height+=5;
				infoMenu.style.height = height + 'vh';
			}
		}
	}

	function animateOff(){
		var width = 20;
		var intervalOn = setInterval(frame, 5);

		function frame(){
			if (width <= 0){
				infoMenu.classList.remove("info-menu-on");
		infoMenu.classList.add("info-menu-off");
				clearInterval(intervalOn);
			} else {
				width--;
				infoMenu.style.width = width + 'vw';
			}
		}
	}
	function animateOffPortrait(){
		console.log("off");
		var height = 50;
		var intervalOn = setInterval(frame, 5);

		function frame(){
			if (height <= 0){
				infoMenu.classList.remove("info-menu-on");
		infoMenu.classList.add("info-menu-off");
				clearInterval(intervalOn);
			} else {
				height-=5;
				infoMenu.style.height = height + 'vh';
			}
		}
	}
</script>
